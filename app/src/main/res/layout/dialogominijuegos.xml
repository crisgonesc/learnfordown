<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Naranja"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡TIENES UN MINIJUEGO NUEVO!"
        android:textAlignment="center"
        android:textColor="@color/Blanco"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="249dp"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/joystick" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿QUIERES JUGAR AHORA O MAS TARDE?"
        android:textAlignment="center"
        android:textColor="@color/Blanco"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/NaranjaClarito"
            android:onClick="DialogNegative"
            android:textColor="@color/Blanco"
            android:text="¡LO QUIERO MAS TARDE!" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NaranjaClarito"
            android:textColor="@color/Blanco"
            android:layout_weight="1"
            android:onClick="DialogPositive"
            android:text="¡LO QUIERO AHORA!" />
    </LinearLayout>

</LinearLayout>