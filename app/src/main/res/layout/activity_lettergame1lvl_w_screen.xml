<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher1"
    android:weightSum="1">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGame"
        android:layout_weight="0.1"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:src="@mipmap/icon_backarrow"
            android:background="@color/colorGame"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:visibility="visible"
            android:onClick="BackArrow"
            android:scaleType="fitCenter"
            android:layout_weight="0.01" />

        <TextView
            android:text="Â¡VAMOS A ESCRIBIR UN POCO!"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="0.79"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/white" />


        <ImageButton
            android:src="@mipmap/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:onClick="goHome"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />
        <ImageButton
            android:src="@mipmap/icon_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button4"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blanco"
        android:layout_weight="0.1"
        android:weightSum="1">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="6"
            android:stepSize="1.0"
            android:rating="0"
            android:isIndicator="true"
            android:gravity="center"
            android:backgroundTint="@color/amarillo"
            android:progressTint="#FFFDED1B"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blanco"
        android:layout_weight="0.8"
        android:weightSum="1">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/Blanco"
            android:layout_weight="0.05"
            android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/abeja" />
            </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/Blanco"
            android:layout_weight="0.85"
            android:weightSum="1">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/Blanco"
                android:layout_weight="1"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src ="@drawable/letra_a"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/lienzo"
                    android:layout_alignEnd="@+id/lienzo" />


    </LinearLayout>

    </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/Blanco"
            android:layout_weight="0.1"
            android:weightSum="1">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Blanco"
                android:layout_weight="1"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/button7"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/Blanco"
                    android:scaleType="fitCenter"
                    android:onClick="validateStrokes"
                    android:visibility="visible"
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/icon_validate" />
        </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Blanco"
                android:layout_weight="0.1"
                android:weightSum="1">

                <ImageButton android:id="@+id/button6"
                    android:layout_height="130dp"
                    android:layout_width="102dp"
                    android:background="@color/Blanco"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_papelera"
                    android:onClick="resetCanvas"
                    android:layout_below="@+id/button7" />
            </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Blanco"
                android:layout_weight="0.1"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/button8"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/Blanco"
                    android:scaleType="fitCenter"
                    android:onClick="trainStrokes"
                    android:visibility="visible"
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/icon_settings" />
            </LinearLayout>
        </LinearLayout>






    </LinearLayout>





    </LinearLayout>

