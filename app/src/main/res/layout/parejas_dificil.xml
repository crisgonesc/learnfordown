<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGame"
        android:layout_weight="0.02"
        android:weightSum="1">

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:id="@+id/button3"
            android:src="@mipmap/icon_backarrow"
            android:background="@color/colorGame"
            android:onClick="BackArrow"
            android:scaleType="fitCenter"
            android:layout_weight="0.03" />


        <ImageButton
            android:src="@mipmap/icon_help"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:id="@+id/button4"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />


        <TextView
            android:text="Â¡COMPLETA LA PALABRA!"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="0.87"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/white" />


        <ImageButton
            android:src="@mipmap/ic_home"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:id="@+id/button5"
            android:onClick="goHome"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <GridLayout
            android:id="@+id/activity_main_3x4"
            android:layout_width="wrap_content"
            android:layout_height="493dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            tools:context="com.lfd.parejas.MainActivity"
            android:columnCount="4"
            android:rowCount="3"
            android:orientation="horizontal">

        </GridLayout>
    </LinearLayout>

</RelativeLayout>




