<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher1"
    android:weightSum="1">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGame"
        android:layout_weight="0.1"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:src="@mipmap/icon_backarrow"
            android:background="@color/colorGame"
            android:visibility="visible"
            android:onClick="BackArrow"
            android:scaleType="fitCenter"
            android:layout_weight="0.1" />


        <ImageButton
            android:src="@drawable/reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/reset"
            android:onClick="reset"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />

        <TextView
            android:text="@string/qu_quieres_practicar1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="0.69"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/white" />


        <ImageButton
            android:src="@mipmap/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button7"
            android:onClick="goHome"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blanco"
        android:layout_weight="0.1"
        android:weightSum="1">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="6"
        android:stepSize="1.0"
        android:layout_gravity="center_vertical"
        android:rating="0"
        android:isIndicator="true"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:backgroundTint="@color/amarillo"
        android:progressTint="#FFFDED1B"
        android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.35"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:weightSum="1">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="?android:attr/activatedBackgroundIndicator"
                android:id="@+id/foto" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="COMPRÉ UN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:background="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="30sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:text="PLANO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button1"
            android:onClick="pulsar"
            android:layout_weight="0.3"
            android:gravity="center"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="36sp"
            android:textAllCaps="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:visibility="invisible"/>

        <Button
            android:text="PLATO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:onClick="pulsar"
            android:layout_weight="0.3"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="36sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:visibility="invisible"/>

        <Button
            android:text="PLÁTANO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:onClick="pulsar"
            android:layout_weight="0.3"
            android:background="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="36sp" />


    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:visibility="invisible"/>

    <!--numStars: indica que consta de esas estrellas
    stepSize:  determina  la cantidad de aumento o disminución de tasa
    rating: estrellas seleccionadas por defecto-->

</LinearLayout>

