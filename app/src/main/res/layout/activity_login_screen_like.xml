<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher1"
    android:weightSum="1">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_weight="0.15"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:src="@mipmap/icon_backarrow"
            android:background="@color/colorPrimary"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:visibility="visible"
            android:onClick="BackArrow"
            android:scaleType="fitCenter"
            android:layout_weight="0.1" />

        <TextView
            android:text="¿TE GUSTA?"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="45sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/white" />


        <ImageButton
            android:src="@mipmap/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button7"
            android:onClick="goHome"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary" />
        <ImageButton
            android:src="@mipmap/icon_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button6"
            android:layout_weight="0.1"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary" />


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blanco"
        android:layout_weight="0.2"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.35"
            android:layout_height="match_parent"
            android:weightSum="1">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="?android:attr/activatedBackgroundIndicator"
                android:id="@+id/foto" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@color/common_google_signin_btn_text_dark_pressed"
                app:srcCompat="@drawable/oso"
                android:layout_weight="1"
                android:textStyle="normal|bold" />


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.35"
            android:layout_height="match_parent"
            android:weightSum="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blanco"
        android:layout_weight="0.1"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:weightSum="1">



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"/>

        <Button
            android:text="NO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/buttonNo"
            android:layout_weight="0.15"
            android:background="@color/Rojo"
            android:textSize="55sp"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:visibility="invisible"/>

        <Button
            android:text="SI"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/buttonYes"
            android:layout_weight="0.15"
            android:textColorHint="@color/Verde"
            android:textCursorDrawable="@color/Verde"
            android:background="@color/Verde"
            android:textSize="55sp"
            android:textColor="@android:color/white"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"/>




    </LinearLayout>

    <!--numStars: indica que consta de esas estrellas
    stepSize:  determina  la cantidad de aumento o disminución de tasa
    rating: estrellas seleccionadas por defecto-->

</LinearLayout>


